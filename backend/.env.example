# BioDockViz Backend Environment Configuration

# Application
BIO_DOCK_ENV=production
BIO_DOCK_VERSION=1.0.0
SECRET_KEY=change_this_to_a_secure_random_string

# Database
DATABASE_URL=postgresql+asyncpg://biodock:password@localhost:5432/biodockviz
DATABASE_POOL_SIZE=10
DATABASE_POOL_RECYCLE=3600

# File Upload
MAX_FILE_SIZE=104857600
UPLOAD_DIR=./uploads
ALLOWED_FILE_TYPES=pdb,pdbqt,sdf,mol2

# Analysis
SPATIAL_GRID_CELL_SIZE=5.0
MAX_ATOMS=100000
BOND_TOLERANCE=0.2

# CORS
CORS_ORIGINS=http://localhost:3000,https://biodockviz.ai

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_USER=10
RATE_LIMIT_PER_IP=100

# Optional Services
REDIS_URL=redis://localhost:6379/0
SENTRY_DSN=
